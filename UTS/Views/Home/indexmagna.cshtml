@model HorarioModel;
@{
    ViewData["Title"] = "Insertar";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/interfaz.css" asp-append-version="true" />
<nav class="navbar navbar-expand-xl navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-action="indexinicio">UTS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Listar" asp-controller="Edificio">Admin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="indexinicio">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="indexmagna">Apartar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="index">Salir</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container my-3">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8 py-4 bg-white">
            <h2>Formulario de apartado</h2>
            <form asp-action="Insertar" asp-asp-controller="Horarios" method="post">
                <div class="card-body justify-content-center">

                    <div class="col-md-4 mb-3">
                        <select class="form-control" asp-for="refInstalacion.idaula"
                                asp-items="@(ViewBag.Lista!=null?new SelectList(ViewBag.Lista, "Value", "Text"):
                            new List<SelectListItem>())">
                            <option value="">Selecciona el aula</option>
                        </select><br />
                    </div>
                    <div class="col-md-4 mb-3">
                        <input type="number" asp-for="clave_empleado2" class="from-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Fecha</label><br />
                        <input type="date" asp-for="Fecha" class="from-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Hora Inicio</label><br />
                        <input type="time" asp-for="HoraInicio" class="from-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Hora Fin</label><br />
                        <input type="time" asp-for="HoraFin" class="from-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <button type="submit" class="btn btn-primary mb-3 btn-sm">Apartar</button><br />
                        <a asp-action="Listar" asp-controller="Horarios" class="btn btn-warning btn-sm">Volver a la lista</a>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<script type="text/javascript" src="~/js/site.js"></script>