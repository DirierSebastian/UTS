@model List<UsuarioModel>;
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card col-8">
    <div class="card-header">
        Lista de usuarios
    </div>
</div>
<div class="card-body">
    <a asp-action="Insertar" asp-controller="Usuario" class="btn btn-primary btn-sm">Crear Nuevo</a>
    <table class="table table-striped bg-white">
        <thead>
            <tr>
                <th>Clave de empleado</th>
                <th>Nombre</th>
                <th>apellidos</th>
                <th>Contraseña</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem=>item.clave_empleado)</td>
                    <td>@Html.DisplayFor(modelItem=>item.nombre)</td>
                    <td>@Html.DisplayFor(modelItem=>item.apellidos)</td>
                    <td>@Html.DisplayFor(modelItem=>item.contraseña)</td>
                    <td>@Html.DisplayFor(modelItem=>item.tipo)</td>

                    <td>
                        <a asp-action="Editar" asp-controller="Usuario" asp-route-clave_empleado="@item.clave_empleado" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Usuario" asp-route-clave_empleado="@item.clave_empleado" class="btn btn-danger btn-sm">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>