@model InstalacionModel;
@{
    ViewData["Title"] = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card col-8">
    <div class="card-header">
        <h1>Agregar Instalacion</h1>
    </div>
    <div class="card-body justify-content-center">
        <form asp-action="Insertar" asp-controller="Instalacion" method="post">
            <div class="col-md-4 mb-3">
                <label class="form-label">Capacidad del aula</label>
                <input type="text" asp-for="capacidad" class="form-control" />
            </div>
            <div>
                <label class="form-label">Nombre del aula</label>
                <input type="text" asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div>
                <select class="form-control" asp-for="refEdificio.numedificio"
                asp-items="@(ViewBag.Lista!=null?new SelectList(ViewBag.Lista, "Value", "Text"):
                new List<SelectListItem>())">
                    <option value="">Selecciona edificio</option>
                </select><br />
            </div>
            <div class="col-md-4 mb-3">
                <button type="submit" class="btn btn-primary mb-3 btn-sm">Guardar</button> <br />
                <a asp-action="Listar" asp-controller="Instalacion" class="btn btn-warning btn-sm"> Volver a la lista</a>
            </div>
        </form>
    </div>
</div>